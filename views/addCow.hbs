<h1>Add Cow</h1>
{{message}}
<p>Enter info</p>
<form method="POST" action="/addCow">
    <p>eartag</p>
    <input type="number" name="eartag" placeholder="eartag" required>
    <p>birthing notes</p>
    <input type="text" name="birth" placeholder="birth" required>
    <p>DOB</p>
    <input type="date" name="dob" placeholder="DOB" required>
    <p>Description</p>
    <input type="text" name="description" placeholder="description" required>
    <p>Dam Eartag</p>
    <input type="number" name="dameartag" placeholder="{{dameartag}}" value="{{dameartag}}" required>
    <p>Sire Eartag</p>
    <input type="number" name="sireeartag" placeholder="sire" required>
    <p>type</p>
    <select name="typeId">
    {{#each types as |type| }}
        <option value="{{ type.typeId }}">{{ type.name}}</option>
        {{/each}}
    </select>
    <button type="submit">Add cow</button>
</form>