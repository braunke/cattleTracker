<h1>Information</h1>
<h2 name="eartag">ID: {{cow.eartag}}</h2>
<p>Description:{{cow.description}}</p>
<p>Image</p>
<p>DOB {{cow.dob}}</p>
<h1 style="color:red">{{cow.type.name}}</h1>
<p>Calving History</p>
<table>


        <tr>
        <th>Calf ID</th>
        <th>DOB</th>
        <th>Sex</th>
        <th>Notes</th>
    </tr>
    {{#each calves as |calf| }}
    <tr>
        <td><a href = '/cowPage/{{calf.cowId}}'>{{calf.eartag}}</a></td>
        <td>{{calf.dob}}</td>
        <td>{{calf.birthing}}</td>

    </tr>
    {{/each}}
</table>
<a href = '/addCow/{{cow.eartag}}'>Add cow</a>
<form method="POST" action="/newCow/{{cow.eartag}}">
    <button type="submit" >Add calf</button>
</form>
<p>Health History</p>
<table>
    <tr>
        <th>Date</th>
        <th>Drug</th>
        <th>Reason</th>
        <th>Withdrawal Period</th>
    </tr>
    {{#each cow.treatments as |treatment| }}
    <tr>
        <td>{{treatment.givendate}}</td>
        <td>{{treatment.drug.name}}</td>
        <td>{{treatment.notes}}</td>
        <td>{{treatment.drug.withdrawalperiod}} days --> {{treatment.withdrawaldate}}</td>
    </tr>
    {{/each}}
</table>
