<div class="content-container page-container clearfix">
    <a href='/homePage'><span class="glyphicon glyphicon-chevron-left"></span> Back</a>

    <div class="flex-horizontal">
        <h1 class="greedy-flex">Add Treatment</h1>
        <div class="flexless">
            <strong><span class="glyphicon glyphicon-user"></span> {{username}}</strong>
            <a href="/logout">(Logout)</a>
        </div>
    </div>

    <form method="POST" action="/treatment" class="well col-sm-6" id="treatment">

        <div class="form-group">
            <label for="cowId">Cow</label>
            <select name="cowId" class="form-control">
                {{#each cows as |cow| }}
                    <option value="{{ cow.cowId }}">{{ cow.eartag}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="dateGiven">Date Given</label>
            <input class="form-control" id="dateGiven" name="dateGiven" type="date" name="dateGiven" placeholder="Date Given">
        </div>

        <div class="form-group">
            <label for="reason">Reason</label>
            <input class="form-control" id="reason" type="text" name="notes" placeholder="reason">
        </div>

        <div class="form-group">
            <label for="drugId">Drug</label>
            <select name="drugId" class="form-control">
                {{#each drugs as |drug| }}
                    <option value="{{ drug.drugId }}">{{ drug.name}}</option>
                {{/each}}
            </select>
        </div>

        <button class="btn btn-primary" type="submit">Add treatment</button>
    </form>
</div>
<div class="panel panel-default panel-home">
    <div class="panel-heading search">
        <div class="content-container text-center">
            <strong>&copy; 2017 Cattle Tracker</strong>
        </div>
    </div>
</div>